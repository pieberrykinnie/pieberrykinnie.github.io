---
interface Props {
  project: {
    title: string;
    category: string;
    description: string;
    technologies: string[];
    featured: boolean;
    date: string;
  };
  index: number;
}

const { project, index } = Astro.props;
---

<div 
  class="card p-6 cursor-pointer project-card animate-scale-in" 
  style={`--index: ${index};`}
  data-project={JSON.stringify(project)}
>
  <div class="flex items-start justify-between mb-4">
    <span class="px-3 py-1 bg-surface-alt text-accent text-sm font-medium rounded-full">
      {project.category}
    </span>
    {project.featured && (
      <span class="text-accent" title="Featured Project">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      </span>
    )}
  </div>
  
  <h3 class="text-xl font-semibold text-primary mb-2 group-hover:text-accent transition-colors">
    {project.title}
  </h3>
  
  <p class="text-secondary mb-4 line-clamp-3">
    {project.description}
  </p>
  
  <div class="flex flex-wrap gap-2 mb-4">
    {project.technologies.slice(0, 3).map(tech => (
      <span class="px-2 py-1 bg-surface-alt text-muted text-xs rounded">
        {tech}
      </span>
    ))}
    {project.technologies.length > 3 && (
      <span class="px-2 py-1 bg-surface-alt text-muted text-xs rounded">
        +{project.technologies.length - 3} more
      </span>
    )}
  </div>
  
  <div class="flex items-center justify-between">
    <span class="text-muted text-sm">
      {new Date(project.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
    </span>
    <span class="text-accent text-sm font-medium">
      View Details â†’
    </span>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>