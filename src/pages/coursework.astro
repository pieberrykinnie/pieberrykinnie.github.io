import Layout from '../layouts/Layout.astro';
import { readdir, readFile } from 'node:fs/promises';

// Load all course data
const courseFiles = await readdir('./src/content/courses');
const courses = await Promise.all(
  courseFiles
    .filter(file => file.endsWith('.json'))
    .map(async (file) => {
      const content = await readFile(`./src/content/courses/${file}`, 'utf-8');
      return JSON.parse(content);
    })
);

// Group courses by academic year and sort by semester
const coursesByYear = {};
courses.forEach(course => {
  const semesterParts = course.semester.split(' ');
  const semester = semesterParts[0];
  const year = parseInt(semesterParts[1]);

  // Calculate academic year: Fall uses current year, Winter/Summer use previous year
  let academicYear;
  if (semester === 'Fall') {
    academicYear = `${year} - ${year + 1}`;
  } else if (semester === 'Winter' || semester === 'Summer') {
    academicYear = `${year - 1} - ${year}`;
  } else {
    // Default case for Spring or other semesters
    academicYear = `${year - 1} - ${year}`;
  }

  if (!coursesByYear[academicYear]) {
    coursesByYear[academicYear] = [];
  }
  coursesByYear[academicYear].push(course);
});

// Sort years in descending order and courses within each year
const sortedYears = Object.keys(coursesByYear).sort((a, b) => {
  const yearA = parseInt(a.split(' - ')[0]);
  const yearB = parseInt(b.split(' - ')[0]);
  return yearB - yearA;
});
sortedYears.forEach(year => {
  coursesByYear[year].sort((a, b) => {
    const semesterOrder = { 'Fall': 2, 'Winter': 1, 'Spring': 0, 'Summer': 0 };
    const aSemester = a.semester.split(' ')[0];
    const bSemester = b.semester.split(' ')[0];
    return (semesterOrder[bSemester] || 0) - (semesterOrder[aSemester] || 0);
  });
});
